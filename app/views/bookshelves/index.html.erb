<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="text-center"><%= current_user.username.capitalize %>'s Bookshelves</h1>
      <p class="text-right"><small><%= link_to 'new bookshelf', "bookshelves/new" %>
      <% @bookshelves.each do |bookshelf| %>
      <ul>
      <li class="list-group-item"><%=link_to bookshelf.name, "bookshelf_items" %>
      <p class="text-right"><small><%= link_to 'edit', "bookshelf_items" %> | <%= link_to 'delete', "bookshelves/#{bookshelf.id}", method: :delete %></small></p>
      <small><%= bookshelf.description %></small>
      </li>
      </ul>
      <% end %>
    </div>
  </div>
</div>


