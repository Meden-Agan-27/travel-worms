
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">

      <h1 class="text-center"><%= @bookshelf.name.capitalize %></h1>
        <button id="myBtn" title="Go to top">Up</button>
      <p class="text-center"><%= @bookshelf.description %></p>
      <div class="text-right"><%= link_to "edit this bookshelf", edit_bookshelf_path(@bookshelf), class: "btn btn-primary mb-3 mr-3" %></div>
      <% @bookshelf_items.each do |item| %>
        <% mybook = Book.find(item.book_id) %>
        <ul class="container">
        <li class="list-group-item" id="shelf"><%= link_to mybook.title, book_path(mybook.id) %>
        <!-- <small>status: <%= item.status %></small> -->
        <div class="card-product">
        <div class="card-product-img" >
        <%= image_tag mybook.image %>
        </div>

        <!-- start form for status -->
        <div class="col-md-4 col-md-offset-3">
        <%= simple_form_for [item.bookshelf, item], remote: true do |f| %>
        <%= f.select :status, { collection: ['to read', 'reading', 'completed'], selected: item.status }, {}, { onchange: 'this.form.submit();'} %>
        <%#= f.button :submit %>
        </div>
          <!-- end form-->
        <% end %>

        <p class="text-right"><%= link_to 'delete', bookshelf_bookshelf_item_path(item.id), method: :delete %></p>
        </li>
        </ul>
        <% end %>
    <div class="text-center"><%= link_to 'Back to bookshelves', bookshelves_path, class: "btn btn-primary mt-3" %></div>
    </div>
  </div>
</div>


