<div class="container">
  <div class="border-top">
    <div class="text-right"><%= link_to 'Edit my profile', edit_profile_path(@profile), class: "btn btn-primary mt-3" %></div>
    <div class="row justify-content-center">
      <div class="col-12">
        <p>
          <strong>First Name:</strong>
          <%= @profile.first_name.capitalize %>
        </p>

        <p>
          <strong>Last Name:</strong>
          <%= @profile.last_name.capitalize %>
        </p>

        <p>Username:
         <%= @profile.user.username %><br>
         City:
         <%= @profile.user.city %><br>
         email:
         <%= @profile.user.email %>
        </p>

        <p>
          <strong>About me:</strong>
          <%= @profile.about %><br>
          Language:
          <%= @profile.user.preferred_language %>
        </p>

        <div class="text-center"><%= link_to 'Back to books', books_path, class: "btn btn-primary mt-3" %></div>
      </div>
    </div>
  </div>
</div>
