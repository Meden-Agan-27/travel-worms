<div class="container">
<h1 class="text-center">All books</h1>
<div class="cards">
<% @books.each do |book| %>
<div class="card-body">
<div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= book.image %>);"></div>
<div class="card-text"><h6> <%= link_to book.title, book, class: "stretched-link"  %></h6> <h6><%= book.author  %></h6></div>
</div>
<% end %>
</div>
</div>
